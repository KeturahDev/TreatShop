@{Layout="_Layout";}

@model List<TreatShop.Models.Flavor>
@using TreatShop.Models

<h1>Flavors of the treats in house</h1>
@if(Model.Count <= 0 )
{
  <p>There are currently no flavors.</p>
}
else
{
  @foreach(Flavor flavor in Model)
  {
    <p>@Html.ActionLink($"{@flavor.Name}", "Details", null, new {id = flavor.FlavorId}, new {@class = "btn btn-warning"})</p>
  }
}

@if (User.Identity.IsAuthenticated)
{
  <hr>
  <p>@Html.ActionLink($"Add a new flavor", "Create", null, null, new {@class = "btn btn-warning"})</p>
}
